<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
        android:id="@+id/plainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_text"
        android:layout_marginRight="@dimen/margin_text"
        android:hint="@string/plaint_text"
        android:ems="10"
        android:layout_marginTop="-40dp"
        android:textAlignment="center"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/cipherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cipher_text"
        android:layout_marginLeft="@dimen/margin_text"
        android:layout_marginRight="@dimen/margin_text"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginBottom="@dimen/top_margin"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/encrypt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_text"
            android:background="@drawable/my_button"
            android:padding="10dp"
            android:text="@string/encrypt"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/decrypt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_text"
            android:background="@drawable/my_button"
            android:padding="10dp"
            android:text="@string/decrypt"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>